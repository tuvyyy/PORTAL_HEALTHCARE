<%- include('layout', { title: 'Trao đổi', body: `
<div class="card p-3">
  <h5 class="mb-3">Trao đổi</h5>
  <div class="border rounded p-3 mb-3 bg-white" style="height: 320px; overflow:auto;">
    <% messages.forEach(m => { %>
      <div class="mb-2">
        <small class="text-muted"><%= m.CreatedAt.toISOString() %></small><br>
        <strong><%= m.FromName %>:</strong> <%= m.Content %>
      </div>
    <% }) %>
  </div>
  <form method="post">
    <div class="input-group">
      <input name="content" class="form-control" placeholder="Nhập tin nhắn...">
      <button class="btn btn-primary">Gửi</button>
    </div>
  </form>
</div>
` }) %>
